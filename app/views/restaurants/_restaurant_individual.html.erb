<div class="border border-dark rounded">
  <h1>
  <%= link_to "#{restaurant.name}", restaurant_path(restaurant), :class => "rounded" %> </h1>
  <h3 class="restaurant_name">Summary:</h3>
  <h5><%= restaurant.summary %></h5>
  <br>
<% if restaurant.picture == nil || restaurant.picture == false || restaurant.picture == ""%>
      <p>no picture found</p>
<% else %>
<div class=".img-fluid. rounded">
    <%= link_to image_tag(restaurant.picture), restaurant_path(restaurant), :class => "rounded"%>
  </div>
<% end %>

  <p> <strong>Capacity:</strong><%= restaurant.capacity %></p>
  <p> <strong>Cost:</strong><%= restaurant.cost %></p>
  <p> <strong>Menu:</strong><%= restaurant.menu %></p>
  <p> <strong>Opening hour:</strong><%= restaurant.opening_hour %></p>
  <p> <strong>Closing hour:</strong><%= restaurant.closing_hour %></p>

</div>
