<%= form_for restaurant do |f|  %>

    <h4><%= f.label :name %></h4>
    <h4><%= f.text_field :name %></h4>

    <h4><%= f.label :address %></h4>
    <h4><%= f.text_field :address %></h4>

    <h4><%= f.label :capacity %></h4>
    <h4><%= f.number_field :capacity %></h4>

    <h4><%= f.label :cost %></h4>
    <h4><%= f.number_field :cost %></h4>

    <h4><%= f.label :summary %></h4>
    <h4><%= f.text_area :summary %></h4>

    <h4><%= f.label :menu %></h4>
    <h4><%= f.text_area :menu %></h4>

    <h4><%= f.label :opening_hour %></h4>
    <h4><%= f.number_field :opening_hour %></h4>

    <h4><%= f.label :closing_hour %></h4>
    <h4><%= f.number_field :closing_hour %></h4>

    <h4><%= f.label :picture_url %></h4>
    <h4><%= f.url_field :picture %></h4>
    <h4><%= f.submit %>

<% end %>

<% if flash[:warning]%>
    <% flash[:warning].each do |error| %>
        <%= error %><br/>
    <%end%>
<%end%>


